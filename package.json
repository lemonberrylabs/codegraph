{
  "name": "codegraph",
  "version": "1.0.0",
  "description": "Codebase call-graph visualizer with dead code and unused parameter detection",
  "type": "module",
  "bin": {
    "codegraph": "./dist/bin/codegraph.js"
  },
  "scripts": {
    "build": "pnpm run build:go && tsc && vite build",
    "build:cli": "pnpm run build:go && tsc",
    "build:go": "cd src/analyzer/go/go-helper && go build -o go-helper .",
    "build:viewer": "vite build",
    "dev:viewer": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "3d-force-graph": "^1.73.0",
    "chokidar": "^4.0.0",
    "commander": "^12.1.0",
    "express": "^4.21.0",
    "fuse.js": "^7.0.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.2.1",
    "open": "^10.1.0",
    "three": "^0.170.0",
    "typescript": "^5.6.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/three": "^0.170.0",
    "@types/ws": "^8.5.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "src/analyzer/python/py-helper",
    "src/analyzer/go/go-helper"
  ],
  "license": "MIT"
}
